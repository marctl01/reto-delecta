<form method="post" action="{{ path('app_segmento_delete', {'id': segmento.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ segmento.id) }}">
    <button class="btn">            
        <span class="relative inline-block px-3 py-1 font-semibold leading-tight">
            <span aria-hidden class="absolute inset-0 bg-indigo-500 opacity-50 rounded-full"></span>
            <span class="relative">Delete</span>
        </span>
    </button>
</form>
